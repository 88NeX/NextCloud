# .env - DO NOT commit real secrets to VCS. Replace changeme_* with strong secrets.
# Nextcloud admin user and password
NEXTCLOUD_ADMIN_USER=admin               # Имя администратора Nextcloud
NEXTCLOUD_ADMIN_PASSWORD=changeme_admin_password  # Сильный пароль администратора

# Nextcloud trusted domain
NEXTCLOUD_TRUSTED_DOMAINS=nextcloud.company.com  # FQDN Nextcloud

# Database
DB_NAME=nextcloud                        # имя базы nextcloud
DB_USER=nc_db_user                       # пользователь БД nextcloud
DB_PASSWORD=changeme_db_password         # пароль пользователя БД
DB_SUPERUSER=postgres                    # postgres superuser
PATRONI_REST_PASSWORD=changeme_patroni_rest   # patroni rest API password
POSTGRES_REPL_PASSWORD=changeme_repl_password # пароль репликации

# Redis
REDIS_PASSWORD=changeme_redis_password   # пароль Redis
REDIS_MAXMEMORY=8gb                      # лимит памяти для Redis

# S3
S3_BUCKET=nextcloud-data                 # имя S3 бакета
S3_KEY=changeme_s3_access_key            # S3 access key
S3_SECRET=changeme_s3_secret_key         # S3 secret key
S3_ENDPOINT=s3.eu-central-1.amazonaws.com # S3 endpoint
S3_REGION=eu-central-1                   # S3 region

# SMTP
SMTP_HOST=smtp.example.com               # SMTP host
SMTP_PORT=587                            # SMTP port
SMTP_USER=nc-notify@example.com          # SMTP user
SMTP_PASS=changeme_smtp_password         # SMTP password
SMTP_SECURE=starttls                     # TLS/SSL setting

# PHP tuning
PHP_UPLOAD_MAX_FILESIZE=2048M
PHP_POST_MAX_SIZE=2048M
PHP_OPCACHE_MEMORY=512M

# Swarm labels
SWARM_WORKER_LABEL=role=worker
SWARM_DB_LABEL=role=db
SWARM_REDIS_LABEL=role=redis

# Misc
MONITORING_EMAIL=ops@example.com

# NOTE: Replace all changeme_* with strong secrets. Move secrets into Docker Secrets or Vault in production.
