NEXTCLOUD_ADMIN_USER=admin                # nextcloud admin username
NEXTCLOUD_ADMIN_PASSWORD=changeme_admin_password  # admin password - REPLACE
NEXTCLOUD_TRUSTED_DOMAINS={{ domain_name }}      # Nextcloud domain

POSTGRES_PASSWORD={{ lookup('env','DB_PASSWORD') | default('changeme_db_password') }}  # DB password
POSTGRES_DB={{ lookup('env','DB_NAME') | default('nextcloud') }}                     # DB name
POSTGRES_USER={{ lookup('env','DB_USER') | default('nc_db_user') }}                 # DB user

REDIS_HOST=redis1                 # Redis host (frontend / sentinel address)
REDIS_PASSWORD={{ lookup('env','REDIS_PASSWORD') | default('changeme_redis_password') }}

S3_BUCKET={{ lookup('env','S3_BUCKET') | default('nextcloud-data') }}
S3_KEY={{ lookup('env','S3_KEY') | default('changeme_s3_access_key') }}
S3_SECRET={{ lookup('env','S3_SECRET') | default('changeme_s3_secret_key') }}
S3_REGION={{ lookup('env','S3_REGION') | default('eu-central-1') }}
S3_ENDPOINT={{ lookup('env','S3_ENDPOINT') | default('s3.example.com') }}

OVERWRITECLIURL=https://{{ domain_name }}
